

$Viewport [

    $FitViewport {
        worldWidth: float
        worldHeight: float
    }

]

$Font [

    $BitmapFont {
        name: string
        file: string
    }

    $FreeTypeFont {
        name: string
        file: string
        color: string
        size: int
    }

]

$Widget [

    $Label {
        text: string
        font: string
    }

    $Image {
        textureName: string
        xScale: float
        yScale: float
    }

]

viewport: $Viewport
assets: {
    textures: string
    fonts: $Font[*]
}
children: $Widget[*]


